# Database Configuration - Neon
DATABASE_URL="postgresql://[user]:[password]@[host]-pooler.[region].aws.neon.tech/[database]?sslmode=require"
DIRECT_URL="postgresql://[user]:[password]@[host].[region].aws.neon.tech/[database]?sslmode=require"

# JWT Configuration
JWT_SECRET="[generate-secure-random-string-min-32-chars]"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"

# Resend Email Configuration
RESEND_API_KEY="[your-resend-api-key]"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_FROM_NAME="Bicycle Maintenance"

# Frontend URLs for email links
FRONTEND_URL="https://yourdomain.com"
PASSWORD_RESET_URL="${FRONTEND_URL}/reset-password"

# Password Reset Settings
PASSWORD_RESET_TOKEN_EXPIRY=3600
PASSWORD_RESET_RATE_LIMIT=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security
BCRYPT_SALT_ROUNDS=12

# Redis Configuration for Background Jobs
REDIS_URL="redis://[username]:[password]@[host]:[port]"

# Queue Configuration
EMAIL_QUEUE_NAME=email-processing
EMAIL_QUEUE_CONCURRENCY=3

# Cron Configuration
MAINTENANCE_REMINDER_ENABLED=true
MAINTENANCE_REMINDER_CRON="0 9 * * *"

# Reminder Settings
DEFAULT_REMINDER_DAYS=7
MAX_REMINDER_DAYS=30

# Monitoring (optional)
SENTRY_DSN="[your-sentry-dsn]"
LOGTAIL_SOURCE_TOKEN="[your-logtail-token]"